<article class="internship" editing="false">
	<%= form_for internship do -%>
		<h1><%=internship.title%></h1>
		<div class="release-date"><%= internship.updated_at.strftime("%d/%m/%y") %></div>
		<div class="division"><div class="line"></div></div>
		<div class="fields">
			<% internship.fields.each do |f| %> 
				<%= link_to f.description, :controller => "internships", :query => f.description %>
				<% if f != internship.fields.last %>,
				<% end %>
			<% end %>
		</div>
		<div class="description">
			<%= markdown(internship.description) %>
		</div>
		<% if internship.created_at > (Time.now - 15.minutes) and
			  internship.owner_hash == cookies[:hash] %>
			<div class="time_ago_in_words">
				<%= time_ago_in_words(internship.created_at) %> atr&aacute;s
			</div>
			<a class="edit">editar</a>
		<% end %>
	<% end -%>
</article>